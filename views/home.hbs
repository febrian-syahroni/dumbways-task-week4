<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Website</title>
    <link rel="stylesheet" href="/public/css/home.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    {{#if user}}
      <!-- Navbar -->
      <nav
        class="sticky-top navbar navbar-expand-lg bg-body-tertiary shadow-sm"
      >
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              style="width: 50px"
              class="logo"
              src="/public/assets/logo.png"
              alt="Logo"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link fw-bold"
                  aria-current="page"
                  href="/"
                >Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/my-projects">My Projects</a>
              </li>
            </ul>
            <div class="logout">
              <a href="/contact" class="btn btn-dark" type="button">Contact Me</a>
              <a
                href="/logout"
                class="btn btn-outline-danger"
                type="button"
              >logout</a>
            </div>
          </div>
        </div>
      </nav>

      <section>
        <h4 style="color: orange;">Hi, {{user.name}}!</h4>
        <p style="color: aliceblue;">Welcome to my website</p>
        <div>
          <a class="btn btn-outline-info" href="/my-projects">My Projects</a>
          <a class="btn btn-outline-warning" href="/create-project">Create a
            project</a>
        </div>
      </section>
    {{else}}
      <section>
        <div class="welcome">
          <div class="title">
            <h1 class="text-warning">Welcome to my website</h1>
            <p>
              Keep your projects organized and accessible track every detail
              with ease using our streamlined project notes platform.
            </p>
            <a class="btn btn-warning" href="/login">Get started</a>
          </div>
        </div>
      </section>
    {{/if}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>