<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Project</title>
    <link rel="stylesheet" href="/public/css/create-project.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
          <!-- Navbar -->
      <nav
        class="sticky-top navbar navbar-expand-lg bg-body-tertiary shadow-sm"
      >
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              style="width: 50px"
              class="logo"
              src="/public/assets/logo.png"
              alt="Logo"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link"
                  aria-current="page"
                  href="/"
                >Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fw-bold" href="/create-project">Add Project</a>
              </li>
            </ul>
            <div class="logout">
              <a href="/contact" class="btn btn-dark" type="button">Contact Me</a>
              <a
                href="/logout"
                class="btn btn-outline-danger"
                type="button"
              >logout</a>
            </div>
          </div>
        </div>
      </nav>

    <!-- Form -->
    <section class="container">
      <h1>Create Project</h1>
      {{#if error}}<p style="color: red;">{{error}}</p>{{/if}}
      <form action="/create-project" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="projectName" class="form-label">Project Name
            <input
              name="name"
              type="text"
              value="{{formData.name}}"
              class="form-control shadow"
              id="projectName"
              aria-describedby="emailHelp"
              required
            />
          </label>
        </div>
        <div class="date mb-3">
          <label for="startDate" class="form-label">Start Date
            <input
              name="start_date"
              type="date"
              value="{{formData.start_date}}"
              class="form-control shadow"
              id="startDate"
              required
            />
          </label>
          <label for="endDate" class="form-label">End Date
            <input
              name="end_date"
              type="date"
              value="{{formData.end_date}}"
              class="form-control shadow"
              id="endDate"
              required
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">
            Descriptions
            <textarea
              class="form-control shadow"
              name="description"
              id="description"
            >{{formData.description}}</textarea>
          </label>
        </div>
        <label class="form-label">Technologies
          <div class="checkbox text-secondary form-check mb-3">
            {{#each technologies}}
              <label class="form-check-label" for="checklist-{{@index}}">
                <input
                  name="checklist"
                  value="{{this.icon}}"
                  type="checkbox"
                  class="form-check-input shadow-sm"
                  id="checklist-{{@index}}"
                  {{#if (isChecked this.icon ../formData.checklist)}}checked{{/if}}
                />
                {{this.name}}
              </label>
            {{/each}}
          </div>
        </label>
        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Image
            <input name="image" accept="image/*" class="form-control shadow" type="file" id="formFile" />
          </label>
        </div>
        <div class="submit">
          <a class="btn btn-outline-dark rounded-pill px-5" href="/">Back</a>
          <button type="submit" class="btn btn-success px-5 rounded-pill shadow">
            Create
          </button>
        </div>
      </form>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>